{
  "include": [
    "./src/**/*",
    "./app*"
  ],
  "exclude": [
    "./node_modules",
    "./test/**/*"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./lib",
    "target": "es2018",
    "declaration": true,
    "module": "commonjs",
    "lib": ["es2018"],
    "strict": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
